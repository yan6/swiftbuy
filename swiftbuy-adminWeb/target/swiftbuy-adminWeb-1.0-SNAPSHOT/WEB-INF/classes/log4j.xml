<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss}:%p %t %c - %m%n" />
        </layout>
    </appender>

    <appender name="file" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${log.dir}/swiftbuy-adminWeb.log" />
        <param name="DatePattern" value="'.'yyyy-MM-dd" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss}:%p %t %l - %m%n"/>
        </layout>
    </appender>

    <logger name="com.mchange.v2">
        <level value="WARN" />
    </logger>

    <logger name="org.springframework">
        <level value="INFO" />
    </logger>

    <logger name="org.springframework.web.servlet.mvc">
        <level value="${swiftbuy.log.level}" />
    </logger>

    <logger name="com.google.code.yanf4j">
        <level value="WARN" />
    </logger>

    <logger name="org.apache.commons.httpclient">
        <level value="WARN" />
    </logger>

    <logger name="httpclient.wire.content">
        <level value="WARN" />
    </logger>

    <logger name="org.apache.http">
        <level value="WARN" />
    </logger>

    <root>
        <level value="${swiftbuy.log.level}" />
        <appender-ref ref="${swiftbuy.log.appender}" />
    </root>

</log4j:configuration>
